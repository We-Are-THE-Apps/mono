---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
			rel="stylesheet"
		/>
		<script>
			var uIp;
			fetch("https://api.ipify.org?format=json")
				.then((response) => response.json())
				.then((data) => {
					console.log(data.ip);
					uIp = data.ip;

					if (uIp != "85.106.97.31") {
						alert("Access denied.");
						setInterval(() => {
							alert("Access denied.");
						}, 3000);
					}
				})
				.catch((error) => {
					console.log("Error:", error);
				});
		</script>
	</head>
	<body
		class="m-0 p-0 overflow-hidden bg-black text-white font-sans flex flex-col w-full h-screen justify-start items-start"
	>
		<nav
			class="flex w-full h-auto flex-row justify-between items-center px-5 py-2"
		>
			<div
				id="logo"
				class="font-black relative text-2xl flex flex-row justify-center items-center gap-4
				before:shadow-2xl before:opacity-0 has-[span:hover]:before:opacity-100 has-[span:hover]:before:translate-y-0 before:-translate-y-2 before:pointer-events-none before:transition-all before:absolute before:px-4 before:py-2 before:-bottom-10 before:w-max before:left-2 before:bg-zinc-900 before:z-50 before:text-base before:font-normal before:rounded-full before:rounded-tl-md"
			>
				<span class="opacity-90 cursor-help">
					<img
						class="w-8 aspect-square"
						src="https://theapps.vercel.app/logoWHITEFG.svg"
						alt="THE logo"
					/>
				</span>
				<div class="w-[1px] h-8 bg-white bg-opacity-20 rotate-[24deg]">
				</div>
				<a href="/" class="cursor-pointer">mono</a>
				<div
					class="px-2 py-1 bg-white bg-opacity-5 font-normal text-xs"
				>
					BETA DEVELOPMENT <b class="font-black">PREVIEW</b>
				</div>
			</div>
			<div class="flex flex-row justify-center items-center gap-1">
				<button class="navButton">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="size-6"
						><path stroke="none" d="M0 0h24v24H0z" fill="none"
						></path><path
							d="M10 5a2 2 0 1 1 4 0a7 7 0 0 1 4 6v3a4 4 0 0 0 2 3h-16a4 4 0 0 0 2 -3v-3a7 7 0 0 1 4 -6"
						></path><path d="M9 17v1a3 3 0 0 0 6 0v-1"></path></svg
					>
				</button>
				<button class="navButton">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="size-6"
						><path stroke="none" d="M0 0h24v24H0z" fill="none"
						></path><path
							d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"
						></path><path
							d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"
						></path><path
							d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855"
						></path></svg
					>
				</button>
				<button class="navButton">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="size-6"
						><path stroke="none" d="M0 0h24v24H0z" fill="none"
						></path><path
							d="M10.325 4.317c.426 -1.756 2.924 -1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543 -.94 3.31 .826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.756 .426 1.756 2.924 0 3.35a1.724 1.724 0 0 0 -1.066 2.573c.94 1.543 -.826 3.31 -2.37 2.37a1.724 1.724 0 0 0 -2.572 1.065c-.426 1.756 -2.924 1.756 -3.35 0a1.724 1.724 0 0 0 -2.573 -1.066c-1.543 .94 -3.31 -.826 -2.37 -2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756 -.426 -1.756 -2.924 0 -3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94 -1.543 .826 -3.31 2.37 -2.37c1 .608 2.296 .07 2.572 -1.065z"
						></path><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"
						></path></svg
					>
				</button>
			</div>
		</nav>

		<main class="flex justify-start items-start w-full h-full">
			<div class="flex flex-col gap-3 py-2 h-full">
				<div class="sidePages active">
					<span class="sideIndicator"></span>
					<div>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="size-6"
							><path stroke="none" d="M0 0h24v24H0z" fill="none"
							></path><path
								d="M21 14l-3 -3h-7a1 1 0 0 1 -1 -1v-6a1 1 0 0 1 1 -1h9a1 1 0 0 1 1 1v10"
							></path><path
								d="M14 15v2a1 1 0 0 1 -1 1h-7l-3 3v-10a1 1 0 0 1 1 -1h2"
							></path></svg
						>
					</div>

					<span class="title">Home</span>
				</div>
				<hr class="mx-6 my-1.5 opacity-40" />
				<div class="sidePages">
					<span class="sideIndicator"></span>
					<div>a</div>
					<span class="title">Community A</span>
				</div>
				<div class="sidePages">
					<span class="sideIndicator"></span>
					<div>b</div>
					<span class="title">Community B</span>
				</div>
				<hr class="mx-6 my-1.5 opacity-40" />
				<div class="sidePages">
					<span class="sideIndicator"></span>
					<div class="text-green-500">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="size-6"
							><path stroke="none" d="M0 0h24v24H0z" fill="none"
							></path><path d="M12 5l0 14"></path><path
								d="M5 12l14 0"></path></svg
						>
					</div>
					<span class="title">Create</span>
				</div>
				<div class="sidePages">
					<span class="sideIndicator"></span>
					<div class="text-green-500">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="size-6"
							><path stroke="none" d="M0 0h24v24H0z" fill="none"
							></path><path d="M8 16l2 -6l6 -2l-2 6l-6 2"
							></path><path
								d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"
							></path><path d="M12 3l0 2"></path><path
								d="M12 19l0 2"></path><path d="M3 12l2 0"
							></path><path d="M19 12l2 0"></path></svg
						>
					</div>
					<span class="title">Discover</span>
				</div>
			</div>

			<div class="w-full px-4 py-2 h-full bg-zinc-950 rounded-tl-xl overflow-auto">
				<slot />
			</div>
		</main>
	</body>
</html>
<style>
	#logo::before {
		content: "Mono is developed and designed by THE Apps.";
	}

	.navButton {
		@apply flex justify-center items-center p-1 rounded-md bg-white bg-opacity-0 hover:bg-opacity-10 transition-all;
	}

	.sidePages {
		@apply flex flex-row relative items-center justify-start gap-2 pr-3 cursor-pointer;
	}

	.sideIndicator {
		@apply block w-1 h-0 opacity-0 bg-white rounded-r-full transition-all;
	}

	.sidePages:hover .sideIndicator {
		@apply h-5 opacity-80;
	}

	.sidePages div {
		@apply rounded-full bg-white bg-opacity-5 flex aspect-square h-12 w-12 justify-center items-center text-xl font-bold;
	}

	.sidePages.active .sideIndicator {
		@apply h-10 bg-white opacity-100;
	}

	.sidePages.active div {
		@apply rounded-xl;
	}

	.sidePages .title {
		@apply opacity-0 -translate-x-8 transition-all pointer-events-none absolute w-max flex justify-center items-center px-2 py-1 rounded-md bg-zinc-900 left-16 top-1/2 shadow-2xl -translate-y-1/2 text-start;
	}

	.sidePages:hover .title {
		@apply opacity-100 translate-x-0;
	}
</style>
